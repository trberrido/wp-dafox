{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"custom": {
			"width": {
				"column-content": "30rem"
			},
			"height": {
				"post-header": "25rem"
			}
		},
		"color": {
			"customDuotone": false,
			"customGradient": false,
			"defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"palette": [
				{
					"color": "transparent",
					"name": "Transparent",
					"slug": "transparent"
				},
				{
					"color": "#FFFFFF",
					"name": "Neutral 000 (text)",
					"slug": "neutral-000"
				},
				{
					"color": "#E7E7E7",
					"name": "Neutral 100",
					"slug": "neutral-100"
				},
				{
					"color": "#535353",
					"name": "Neutral 500",
					"slug": "neutral-500"
				},
				{
					"color": "#303030",
					"name": "Neutral 600",
					"slug": "neutral-600"
				},
				{
					"color": "#272727",
					"name": "Neutral 700",
					"slug": "neutral-700"
				},
				{
					"color": "#242424",
					"name": "Neutral 800",
					"slug": "neutral-800"
				},
				{
					"color": "#181818",
					"name": "Neutral 900",
					"slug": "neutral-900"
				}
			]
		},
		"appearanceTools": true,
		"spacing": {
			"defaultSpacingSizes": false,
			"customSpacingSize": false,
			"spacingSizes": [
				{
					"name": "0.25rem",
					"size": ".25rem",
					"slug": "050"
				},
				{
					"name": "0.5rem",
					"size": ".5rem",
					"slug": "100"
				},
				{
					"name": "0.75rem",
					"size": ".75rem",
					"slug": "200"
				},
				{
					"name": "1rem",
					"size": "1rem",
					"slug": "300"
				},
				{
					"name": "1.5rem",
					"size": "1.5rem",
					"slug": "400"
				},
				{
					"name": "2rem",
					"size": "2rem",
					"slug": "500"
				},
				{
					"name": "3rem",
					"size": "3rem",
					"slug": "600"
				},
				{
					"name": "5rem",
					"size": "5rem",
					"slug": "700"
				}
			]
		},
		"typography": {
			"customFontSize": false,
			"defaultFontSizes": false,
			"fontSizes": [
				{
					"name": "Small",
					"size": ".75rem",
					"slug": "sm"
				},
				{
					"name": "Medium",
					"size": "1rem",
					"slug": "md"
				},
				{
					"name": "Large",
					"size": "1.5rem",
					"slug": "lg"
				},
				{
					"name": "XL",
					"size": "2rem",
					"slug": "xl"
				},
				{
					"name": "XXL",
					"size": "3rem",
					"slug": "xxl"
				}
			],
			"fontFamilies": [
				{
					"name": "Default",
					"slug": "default",
					"fontFamily": "\"opensans\", sans-serif",
					"fontFace": [
						{
							"fontFamily": "opensans",
							"fontVariationSettings": "'WGHT' 300",
							"fontWeight": "300",
							"fontStyle": "normal",
							"src": ["file:./assets/fonts/OpenSans-VariableFont_wdth,wght-partial.woff2"]
						},
						{
							"fontFamily": "opensans",
							"fontVariationSettings": "'WGHT' 400",
							"fontWeight": "400",
							"fontStyle": "normal",
							"src": ["file:./assets/fonts/OpenSans-VariableFont_wdth,wght-partial.woff2"]
						},
						{
							"fontFamily": "opensans",
							"fontVariationSettings": "'WGHT' 700",
							"fontWeight": "700",
							"fontStyle": "normal",
							"src": ["file:./assets/fonts/OpenSans-VariableFont_wdth,wght-partial.woff2"]
						}
					]
				}
			]
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header-home",
			"title": "Header home"
		},
		{
			"area": "header",
			"name": "header-single",
			"title": "Header single"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	],
	"styles":{
		"css": ".wp-site-blocks { max-width: 120rem }",
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--default)",
			"fontSize": "var(--wp--preset--font-size--md)",
			"fontWeight": "300"
		},
		"color": {
			"text": "var(--wp--preset--color--neutral-000)",
			"background":"var(--wp--preset--color--neutral-900)"
		},
		"elements": {
			"heading": {
				"typography": {
					"fontWeight": "700",
					"lineHeight": "1"
				}
			}
		},
		"blocks": {
			"core/list": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--neutral-000)"
						}
					}
				}
			},
			"core/paragraph": {
				"css": "& strong { font-weight: 700 }",
				"elements": {
					"link": {
						"color": {
							"text": "white"
						}
					}
				}
			},
			"core/post-title": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						"color": {
							"text": "var(--wp--preset--color--neutral-000)"
						}
					}
				}
			},
			"core/site-title": {
				"typography": {
					"lineHeight": "1em"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/social-link": {
				"css": "& svg { height: 1.5rem!important; width: 1.5rem!important }"
			}
		}
	}
}